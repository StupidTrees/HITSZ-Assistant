<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 设置toolbar按钮样式-->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
    </style>

    <style name="MainTabsTextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTabsTextTheme_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="CourseTitleTheme_normal">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/material_primary_text</item>
    </style>


    <!-- 欢迎页的风格 -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- 透明背景不要了 -->
    </style>

    <!-- chatbotActivity的主题 -->
    <style name="ChatBotTheme" parent="AppTheme">
        <!-- 状态栏透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <!-- toolbar三线按钮样式颜色-->
    <style name="left_Drawer_Arrow_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#99FFFFFF</item>
        <!--<item name="barLength">10dp</item>-->
        <!--<item name="gapBetweenBars">3dp</item>-->
    </style>
    <!-- Timetable的toolbar三线按钮样式颜色-->
    <style name="left_Drawer_Arrow_Style_TimeTable" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/material_text_icon_white</item>
        <item name="barLength">6dp</item>
        <item name="gapBetweenBars">2dp</item>
        <item name="thickness">2dp</item>
    </style>


    <!-- 用在ChatBot的toolbar主题-->
    <style name="ToolBarTheme_chatbot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>
    <!-- 用在TimeTable的toolbar主题-->
    <style name="ToolBarTheme_timetable" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style_TimeTable</item>-->
        <item name="colorButtonNormal">@color/material_text_icon_white</item>
        <item name="colorControlNormal">@color/material_text_icon_white</item>
    </style>
    <!-- 用在TimeLine的toolbar主题-->
    <style name="ToolBarTheme_timeline" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style_TimeTable</item>-->
        <item name="colorButtonNormal">@color/material_text_icon_white</item>
        <item name="colorControlNormal">@color/material_text_icon_white</item>
    </style>
    <!-- 用在NoteActivity的toolbar主题-->
    <style name="ToolBarTheme_notes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">#202020</item>
        <item name="colorControlNormal">#202020</item>
    </style>

    <!-- 用在UserCenterActivity的toolbar主题-->
    <style name="ToolBarTheme_usercenter" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@color/material_text_icon_white</item>
        <item name="colorControlNormal">@color/material_text_icon_white</item>
    </style>
    <!-- 用在SubjectActivity的toolbar主题-->
    <style name="ToolBarTheme_subject" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@color/material_text_icon_white</item>
        <item name="colorControlNormal">@color/material_text_icon_white</item>
    </style>

    <!--水波纹风格-->
    <style name="button_ripple_primary">
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:radius">24dp</item>
    </style>
    <!--水波纹风格-->
    <style name="button_ripple_primary_large">
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:radius">36dp</item>
    </style>
    <!--水波纹风格-->
    <style name="button_ripple_primary_extra_large">
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:radius">64dp</item>
    </style>
    <!--水波纹风格-->
    <style name="button_ripple_white">
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="android:radius">24dp</item>
    </style>

    <!--switch风格-->
    <style name="switch_white" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency) switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/white</item>

        <!--&lt;!&ndash; Inactive thumb color switch关闭时的拇指按钮的颜色 &ndash;&gt;-->
        <!--<item name="colorSwitchThumbNormal">@color/theme_color_gray</item>-->

        <!--&lt;!&ndash; Inactive track color(30% transparency) switch关闭时的轨迹的颜色 30%这个颜色 &ndash;&gt;-->
        <!--<item name="android:colorForeground">@color/colorAccent</item>-->

        <!--使用方法： 在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
