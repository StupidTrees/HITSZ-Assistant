<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="6dip" />

            <gradient
                android:angle="0"
                android:endColor="?attr/background_icon_color_bottom"
                android:startColor="?attr/background_icon_color_bottom"
                android:centerY="0.75" />
        </shape>
    </item>


    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="6dip" />

                <gradient
                    android:angle="0"
                    android:startColor="?attr/colorPrimary"
                    android:endColor="?attr/colorFade" />
            </shape>
        </clip>
    </item>

</layer-list>
