<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 设置toolbar按钮样式-->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
        <item name="text_color_primary">@color/material_text_icon_white</item>
        <item name="text_color_secondary">@color/material_text_icon_white_secondary</item>
        <item name="toolbar_icon_color">#202020</item>
        <item name="background_color_bottom">#000000</item>
        <item name="background_color_second">#202020</item>
        <item name="background_icon_color">#22FFFFFF</item>
        <item name="text_color_iconic">#FFFFFF</item>
        <item name="toolbarStyle">@style/ToolBarTheme_Light</item>
        <item name="drawer_header_background">@drawable/bg_black</item>
        <item name="color_primary_fade_background">@drawable/bg_black</item>
    </style>

    <style name="MainTabsTextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CalendarTextTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_color_primary</item>
    </style>

    <style name="MainTabsTextTheme_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>



    <!-- 欢迎页的风格 -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- 透明背景不要了 -->
    </style>


</resources>