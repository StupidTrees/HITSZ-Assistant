<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:padding="16dp"
        android:text="5月9日（今天）"
        android:textColor="@color/material_text_icon_white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/ade_weekpicker_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cyclic="false"
            app:divider="?attr/colorPrimaryDark"
            app:selectedColor="@color/white"
            app:toward="right"
            app:unselectedColor="#44FFFFFF"
            app:visibleItems="4" />

        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/ade_weekpicker_dow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cyclic="false"
            app:divider="?attr/colorPrimaryDark"
            app:selectedColor="@color/white"
            app:toward="right"
            app:unselectedColor="#44FFFFFF"
            app:visibleItems="4" />
        <!--&lt;!&ndash;<Spinner&ndash;&gt;-->
        <!--&lt;!&ndash;android:id="@+id/ade_weekpicker_dow"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_width="wrap_content"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_height="wrap_content"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_marginLeft="8dp">&ndash;&gt;-->

        <!--</Spinner>-->
    </LinearLayout>

    <CalendarView
        android:id="@+id/ade_calendarview"
        style="@android:style/Widget.Material.Light.CalendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>