<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jwts.FragmentJWTS_xsxk">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/jwts_second_tab_height"
        android:background="@color/material_backgroung_grey_50"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_xsxk_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/spinner_xsxk_xnxq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/spinner_xsxk_bx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_backgroung_grey_50"
        android:clickable="false"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/material_secondary_text" />

        <TextView
            android:id="@+id/xsxk_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.24"
            android:gravity="center"
            android:singleLine="false"
            android:text="学分"
            android:textColor="@color/material_secondary_text" />

        <TextView
            android:id="@+id/xsxk_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.24"
            android:gravity="center"
            android:singleLine="false"
            android:text="类别"
            android:textColor="@color/material_secondary_text" />

        <TextView
            android:id="@+id/totalcoursesOrResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.24"
            android:gravity="center"
            android:singleLine="false"
            android:text="总学时"
            android:textColor="@color/material_secondary_text" />

        <TextView
            android:id="@+id/xsxk_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:gravity="center"
            android:singleLine="false"
            android:text="已选/容量"
            android:textColor="@color/material_secondary_text" />

        <TextView
            android:id="@+id/xsxk_blank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2" />

    </LinearLayout>

    <TextView
        android:id="@+id/xsxk_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:padding="16dp"
        android:text="TextView"
        android:textColor="?attr/colorPrimary" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/xsxk_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/xsxk_loading"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>