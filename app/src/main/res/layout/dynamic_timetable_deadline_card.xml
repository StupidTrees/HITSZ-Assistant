<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/card"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_marginLeft="2dp"    android:layout_marginRight="2dp"    android:layout_marginBottom="3.5dp"    android:clickable="true"    android:contextClickable="true"    android:focusable="true"    android:foreground="?attr/selectableItemBackgroundBorderless"    android:longClickable="true"    app:cardBackgroundColor="?attr/colorPrimary"    app:cardCornerRadius="6dp">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_weight="1"        android:gravity="center"        android:text="DDL"        android:textColor="@color/material_text_icon_white"        android:textSize="12sp"        android:textStyle="bold" /></androidx.cardview.widget.CardView>