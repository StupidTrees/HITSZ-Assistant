<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:transitionName="card">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tt_dlg_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="高等数学B"
            android:textColor="?attr/text_color_primary"
            android:textSize="20sp"
            android:transitionName="course_name" />

        <ImageView
            android:id="@+id/dlg_bt_detail"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/bt_dlg_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_tt_duration" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_dlg_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:singleLine="false"
                android:text="	2019-06-12，星期三，第1,2,3,4节，09:00-11:00"
                android:textColor="#212121"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_tt_classroom" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="考场"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_dlg_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="T3502"
                android:textColor="#212121"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_timetable_date" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_dlg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="3月24日(第三周星期日）"
                android:textColor="#212121"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>