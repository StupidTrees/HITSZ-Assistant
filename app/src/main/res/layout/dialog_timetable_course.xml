<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:transitionName="card">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tt_dlg_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center|start"
            android:paddingStart="24dp"
            android:singleLine="true"
            android:text="高等数学B"
            android:textColor="?attr/text_color_primary"
            android:textSize="20sp"
            android:transitionName="course_name"
            android:focusable="true"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/dlg_bt_detail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:tint="?attr/colorControlNormal"
            android:tintMode="src_in"
            app:srcCompat="@drawable/bt_dlg_more"
            app:theme="@style/button_ripple_primary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tt_dlg_value3_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="true">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_tt_teacher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="left|center"
                android:text="@string/dialog_teacher"
                android:textColor="?attr/text_color_secondary"
                android:textSize="12sp"
                tools:ignore="NestedWeights,RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tt_dlg_value3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:singleLine="true"
                    android:text="张彪"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:clickable="false"
                    android:tint="?attr/colorPrimary"
                    app:srcCompat="@drawable/bt_detail" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tt_dlg_value2_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="true">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_location2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="left|center"
                android:text="@string/dialog_classroom"
                android:textColor="?attr/text_color_secondary"
                android:textSize="12sp"
                tools:ignore="NestedWeights,RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tt_dlg_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center"
                    android:maxEms="8"
                    android:singleLine="false"
                    android:text="T3502"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/classroom_detail_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:clickable="false"
                    android:tint="?attr/colorPrimary"
                    app:srcCompat="@drawable/bt_detail" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_tt_duration" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_time"
                android:textColor="?attr/text_color_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_dlg_value4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="10:30-11:00"
                android:textColor="?attr/text_color_primary"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_tt_duration"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_period"
                android:textColor="?attr/text_color_secondary"
                android:textSize="12sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/tt_dlg_value5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="1,2"
                android:textColor="?attr/text_color_primary"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:tint="?attr/colorPrimary"
            app:srcCompat="@drawable/ic_dlg_timetable_date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_date"
                android:textColor="?attr/text_color_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_dlg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="3月24日(第三周星期日）"
                android:textColor="?attr/text_color_primary"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:tint="?attr/colorPrimary"
                app:srcCompat="@drawable/ic_date_range" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_this_course_s"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/course_course_in_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_this_course_p"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/course_progress"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:progress="50" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:tint="?attr/colorPrimary"
                app:srcCompat="@drawable/ic_dlg_timetable_date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_course_rate_p"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_course_rate_s"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="4dp"
                    android:indeterminate="false"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:rating="2.5" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notes_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            tools:ignore="NestedWeights"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:tint="?attr/colorPrimary"
                app:srcCompat="@drawable/ic_dlg_timetable_date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_course_notes"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="还没有笔记！点击添加"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="18sp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.89"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/course_recy_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:srcCompat="@drawable/ic_arrow_drop_down"
        app:theme="@style/button_ripple_primary" />


</LinearLayout>