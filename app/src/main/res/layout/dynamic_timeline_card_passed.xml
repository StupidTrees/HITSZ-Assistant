<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timelineview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="16dp"
        app:endLineColor="?attr/background_icon_color"
        app:lineWidth="4dp"
        app:marker="@drawable/timeline_marker_passed"
        app:markerInCenter="false"
        app:markerSize="16dp"
        app:startLineColor="?attr/background_icon_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tl_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="16dp"
            android:text="10:15-10:32"
            android:textColor="?attr/text_color_secondary"
            android:textSize="12sp"
            android:transitionName="course_time" />

        <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?attr/background_color_second"
            android:id="@+id/tl_card"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:longClickable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tl_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:maxEms="11"
                    android:singleLine="true"
                    android:text="学习"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:text="已结束"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>