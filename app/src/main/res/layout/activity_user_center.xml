<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_backgroung_grey_50">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/material_backgroung_grey_50">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/usercenter_toolbarlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:contentScrim="@color/material_text_icon_white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/usercenter_appbar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="40dp"
                android:foreground="#33FFFFFF"
                android:requiresFadingEdge="vertical"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom|center"
                android:background="#BBFFFFFF"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="56dp"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5">

                <TextView
                    android:id="@+id/usercenter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="杨涵丞"
                    android:textColor="@color/material_primary_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/usercenter_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:text="计算机科学与技术学院"
                    android:textColor="@color/material_primary_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/usercenter_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:transitionName="useravatar"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/material_toolbar_top_margin"
                android:minHeight="0dp"
                app:layout_collapseMode="pin"
                app:theme="@style/ToolBarTheme_Dark" />

            <android.support.design.widget.TabLayout
                android:id="@+id/usercenter_tablayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:layout_collapseMode="pin"
                app:tabIndicatorColor="?attr/colorPrimary"
                app:tabSelectedTextColor="@color/material_primary_text"
                app:tabTextColor="#66000000"
                app:theme="@style/button_ripple_primary" />

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/usercenter_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior" />

</android.support.design.widget.CoordinatorLayout>