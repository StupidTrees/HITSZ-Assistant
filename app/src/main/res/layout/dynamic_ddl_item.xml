<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="24dp"
    android:paddingTop="16dp"
    android:paddingEnd="24dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:alpha="0.8"
            android:fontFamily="sans-serif-black"
            android:maxWidth="60dp"
            android:text="Sat, Next Week"
            android:textColor="?attr/text_color_secondary"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:clickable="false"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="?attr/background_icon_color_bottom"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:tint="?attr/text_color_secondary"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_access_time" />

                <TextView
                    android:id="@+id/time_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="sans-serif-black"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="12:00"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.08"
        android:tint="?attr/colorControlNormal"
        android:tintMode="src_in"
        app:srcCompat="@drawable/dialog_background_radius" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:maxLines="3"
        android:text="提交作业"
        android:textColor="?attr/text_color_primary"
        android:textSize="16sp"
        android:transitionName="course_time" />

    <com.stupidtree.hita.views.FocusTextView
        android:id="@+id/time_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/radius_accent_lgiht_button_bg"
        android:backgroundTint="?attr/background_color_bottom_as_tint"
        android:backgroundTintMode="src_over"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-black"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="120dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:text="1天3小时"
        android:textColor="?attr/colorAccent" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>