<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.FragmentUTMoodDay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center|start"
                    android:text="3月14日"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center|start"
                    android:textColor="?attr/text_color_secondary"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/mood_title"
                android:textColor="@color/material_text_icon_white"
                android:visibility="gone" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:background="@drawable/radius_accent_round_icon_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="100.0"
                    android:textColor="?attr/colorAccent"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/score_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="很棒！"
                    android:textColor="?attr/colorAccent"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/radius_accent_round_icon_bg"
                android:backgroundTint="?attr/background_color_bottom_as_tint"
                android:backgroundTintMode="src_over"
                android:padding="4dp"
                android:src="@drawable/ic_mood_happy"
                android:tint="?attr/colorAccent" />

            <ProgressBar
                android:id="@+id/first_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:progress="0"
                android:progressDrawable="@drawable/style_progressbar_accent" />

            <TextView
                android:id="@+id/first_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/text_color_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/second_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/radius_accent_round_icon_bg"
                android:backgroundTint="?attr/background_color_bottom_as_tint"
                android:backgroundTintMode="src_over"
                android:padding="4dp"
                android:src="@drawable/ic_mood_happy"
                android:tint="?attr/colorAccent" />

            <ProgressBar
                android:id="@+id/second_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:progress="0"
                android:progressDrawable="@drawable/style_progressbar_accent" />

            <TextView
                android:id="@+id/second_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="?attr/text_color_secondary"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/third_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/radius_accent_round_icon_bg"
                android:backgroundTint="?attr/background_color_bottom_as_tint"
                android:backgroundTintMode="src_over"
                android:padding="4dp"
                android:src="@drawable/ic_mood_happy"
                android:tint="?attr/colorAccent" />

            <ProgressBar
                android:id="@+id/third_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:progress="0"
                android:progressDrawable="@drawable/style_progressbar_accent"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/third_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="?attr/text_color_secondary"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout></androidx.core.widget.NestedScrollView>