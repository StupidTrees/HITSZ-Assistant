<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatbot_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="?attr/background_color_bottom">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:minHeight="80dp"
            app:contentScrim="?attr/background_color_bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@id/toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:layout_marginTop="26dp"
                android:fitsSystemWindows="true"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_collapseMode="pin"
                app:theme="?attr/toolbarStyle"
                app:title=" " />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/hita_animation_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="?attr/colorPrimary"
                app:lottie_imageAssetsFolder="/hita_animation"
                app:lottie_loop="true"
                app:lottie_renderMode="automatic"
                app:lottie_repeatMode="reverse" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/recycler_layout_animation_falls_down"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="never"
        android:paddingBottom="80dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_gravity="bottom|center|right"
        android:layout_marginStart="@dimen/material_fab_margin"
        android:layout_marginTop="@dimen/material_fab_margin"
        android:layout_marginEnd="@dimen/material_fab_margin"
        android:layout_marginBottom="@dimen/material_fab_margin"
        android:tint="@color/material_text_icon_white"
        android:tintMode="src_in"

        android:transitionName="fab"
        android:visibility="gone"
        app:fabCustomSize="60dp"
        app:maxImageSize="36dp"
        app:srcCompat="@drawable/bt_chatbot_voice_wave" />

    <LinearLayout
        android:id="@+id/voiceInput"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:srcCompat="@drawable/background_color_gradient_reverse" />

        <jaygoo.widget.wlv.WaveLineView
            android:id="@+id/waveLineView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:background="?attr/background_color_bottom"
            android:visibility="visible"
            app:wlvBackgroundColor="#00000000"
            app:wlvLineColor="?attr/colorPrimary"
            app:wlvMoveSpeed="290"
            app:wlvSensibility="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-6dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingVertical="5dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:srcCompat="@drawable/background_color_gradient_reverse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:background="?attr/background_color_bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="auto"
                android:hint="想和我说啥？"
                android:textColor="?attr/text_color_primary"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp"
                android:focusable="auto"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingHorizontal="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bt_chatbot_send"
                android:tint="?attr/colorControlNormal"
                android:tintMode="src_in"
                app:theme="@style/button_ripple_primary" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="8dp"
        android:alpha="0.5"
        android:text="语音听写能力来自科大讯飞"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_shutup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:tint="?attr/colorAccent"
        app:backgroundTint="@color/material_text_icon_white"
        app:fab_size="mini"
        app:layout_anchor="@+id/chat_recyclerview"
        app:layout_anchorGravity="end|center"
        app:maxImageSize="56dp"
        app:srcCompat="@drawable/fab_chatbot_shutup" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>