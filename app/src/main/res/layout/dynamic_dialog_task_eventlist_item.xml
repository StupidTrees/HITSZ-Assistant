<?xml version="1.0" encoding="UTF-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/ei_layout"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginRight="16dp"    android:clickable="true"    android:foreground="?attr/selectableItemBackgroundBorderless"    android:orientation="horizontal"    android:paddingTop="8dp">    <ImageView        android:layout_width="8dp"        android:layout_height="8dp"        android:layout_gravity="center"        android:layout_marginRight="6dp"        android:tint="?attr/colorPrimary"        app:srcCompat="@drawable/timeline_marker" />    <TextView        android:id="@+id/tasklist_name"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_weight="1"        android:clickable="false"        android:descendantFocusability="blocksDescendants"        android:gravity="center|left"        android:singleLine="true"        android:text="2018课表"        android:textAppearance="?android:attr/textAppearanceListItemSmall"        android:textColor="?attr/text_color_primary"        android:textSize="12sp" />    <TextView        android:id="@+id/week"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginLeft="8dp"        android:layout_marginRight="4dp"        android:clickable="false"        android:descendantFocusability="blocksDescendants"        android:gravity="center|left"        android:singleLine="true"        android:text="3周"        android:textAppearance="?android:attr/textAppearanceListItemSmall"        android:textColor="?attr/text_color_secondary"        android:textSize="12sp" />    <TextView        android:id="@+id/dow"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginRight="16dp"        android:clickable="false"        android:descendantFocusability="blocksDescendants"        android:gravity="center|left"        android:singleLine="true"        android:text="星期五"        android:textAppearance="?android:attr/textAppearanceListItemSmall"        android:textColor="?attr/text_color_secondary"        android:textSize="12sp" />    <TextView        android:id="@+id/length"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:clickable="false"        android:descendantFocusability="blocksDescendants"        android:gravity="center|left"        android:singleLine="true"        android:text="20min"        android:textAppearance="?android:attr/textAppearanceListItemSmall"        android:textColor="?attr/text_color_secondary"        android:textSize="12sp" /></LinearLayout>