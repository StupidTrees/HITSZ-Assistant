<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timelineview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="16dp"
        app:endLineColor="?attr/background_icon_color"
        app:lineWidth="4dp"
        app:marker="@drawable/timeline_marker"
        app:markerInCenter="false"
        app:markerSize="16dp"
        app:startLineColor="?attr/background_icon_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tl_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:text="10:15-10:32"
            android:textColor="?attr/text_color_secondary"
            android:textSize="12sp"
            android:transitionName="course_time" />

        <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?attr/background_color_second"
            android:id="@+id/tl_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:longClickable="true"
            android:transitionName="card"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ProgressBar
                    android:id="@+id/event_progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:progressDrawable="@drawable/style_progressbar_timeline" />

                <TextView
                    android:id="@+id/tl_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="sans-serif-black"
                    android:gravity="left"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:text="当前中国社会治理热点研究考试"
                    android:textColor="?attr/text_color_primary"
                    android:textSize="16sp"
                    android:transitionName="course_name" />

                <LinearLayout
                    android:id="@+id/tl_bt_navi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    app:theme="@style/button_ripple_primary_large">

                    <TextView
                        android:id="@+id/tl_tv_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="1"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:text="T3402"
                        android:textColor="?attr/text_color_secondary"
                        android:textSize="12sp"
                        android:transitionName="course_name" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:clickable="false"

                        android:tint="?attr/text_color_secondary"
                        app:srcCompat="@drawable/fab_navigation" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tl_tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="34min"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>