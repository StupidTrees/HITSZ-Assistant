<?xml version="1.0" encoding="utf-8"?><LinearLayout android:clickable="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">    <androidx.cardview.widget.CardView        app:cardBackgroundColor="?attr/background_color_second"        android:id="@+id/timetable_card"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginLeft="2dp"        android:layout_marginRight="2dp"        android:layout_marginBottom="3.5dp"        android:clickable="true"        android:contextClickable="true"        android:focusable="true"        android:foreground="?attr/selectableItemBackgroundBorderless"        android:longClickable="true"        android:transitionName="card"        app:cardCornerRadius="8dp">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical">            <ImageView                android:layout_width="8dp"                android:layout_height="8dp"                android:layout_gravity="center"                android:layout_margin="3dp"                app:srcCompat="@drawable/timeline_marker" />            <TextView                android:id="@+id/tt_card_coursename"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_gravity="center"                android:layout_weight="1"                android:gravity="center"                android:text="高级程序语言设计"                android:textColor="?attr/text_color_primary"                android:textSize="12sp" />            <TextView                android:id="@+id/tt_card_place"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_gravity="center"                android:layout_weight="1.31"                android:gravity="center"                android:text="T3502"                android:textColor="?attr/text_color_secondary"                android:textSize="12sp"                android:textStyle="bold" />        </LinearLayout>    </androidx.cardview.widget.CardView></LinearLayout>