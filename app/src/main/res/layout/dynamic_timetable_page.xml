<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tt_tv_month"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:gravity="center"
                android:text="12"
                android:textColor="?attr/colorPrimary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:text="月"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tt_tv_day1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="16"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_tv_day2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="17"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_tv_day3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="18"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_tv_day4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="19"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_tv_day5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="20"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_tv_day6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="21"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tt_tv_day7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.9"
                android:gravity="center"
                android:text="22"
                android:textColor="?attr/text_color_primary"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fitsSystemWindows="true"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:gravity="center|top"
                android:text="月"
                android:textColor="?attr/colorPrimary"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="一"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="二"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="三"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="四"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="五"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="六"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:alpha="0.6"
                android:gravity="center"
                android:text="日"
                android:textColor="?attr/text_color_primary"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wholeday_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:gravity="center"
                android:minHeight="0dp"
                android:paddingLeft="6dp"
                android:text="全天"
                android:textColor="?attr/text_color_secondary"
                android:textSize="8sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_1"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_2"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_3"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_4"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_5"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_6"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tt_wholeday_card_7"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:minWidth="24dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:theme="@style/button_ripple_primary">

                    <TextView
                        android:id="@+id/tt_wholeday_text_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/material_text_icon_white" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/timetable_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tt_class_number_layout"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/tt_rl_monday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/tt_rl_tuesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/tt_rl_wednesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/tt_rl_thursday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/tt_rl_friday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/tt_rl_saturday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/tt_rl_weekday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="vertical" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>