<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jwts.FragmentJWTS_cjgl" >

    <android.support.design.widget.TabLayout
        android:id="@+id/cjgl_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jwts_second_tab_height"
        android:background="@color/material_backgroung_grey_50"
        app:tabIndicatorColor="#00000000"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabTextColor="#66000000"
        app:tabUnboundedRipple="true">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/cjgl_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>