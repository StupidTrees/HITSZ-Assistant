<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_courseItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:padding="8dp">

    <TextView
        android:id="@+id/cjxx_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="计算机专业导论"
        android:textColor="@color/material_primary_text" />

    <TextView
        android:id="@+id/cjxx_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center|left"
        android:singleLine="false"
        android:text="必修" />

    <TextView
        android:id="@+id/cjxx_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center|left"
        android:singleLine="false"
        android:text="1.2" />

    <TextView
        android:id="@+id/cjxx_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center|left"
        android:singleLine="false"
        android:text="99"
        android:textColor="@color/material_primary_text" />

    <TextView
        android:id="@+id/cjxx_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center|left"
        android:singleLine="false"
        android:text="99"
        android:textColor="?attr/colorPrimary" />

</LinearLayout>
