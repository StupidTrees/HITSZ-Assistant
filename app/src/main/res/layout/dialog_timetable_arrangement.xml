<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="8dp"        android:layout_weight="1"        android:orientation="horizontal"        android:paddingStart="24dp">        <TextView            android:id="@+id/tt_dlg_name"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center|start"            android:singleLine="false"            android:text="事务"            android:textColor="?attr/text_color_primary"            android:textSize="20sp"            android:transitionName="course_name"            tools:ignore="HardcodedText,NestedWeights" />        <ImageView            android:id="@+id/dlg_bt_detail"            android:layout_width="64dp"            android:layout_height="64dp"            android:foreground="?attr/selectableItemBackground"            android:padding="16dp"            android:tint="?attr/colorControlNormal"            android:tintMode="src_in"            app:srcCompat="@drawable/bt_dlg_more"            app:theme="@style/button_ripple_primary" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginLeft="24dp"        android:layout_marginTop="10dp"        android:layout_marginRight="24dp"        android:layout_marginBottom="10dp"        android:layout_weight="1"        android:gravity="center"        android:orientation="horizontal">        <ImageView            android:layout_width="18dp"            android:layout_height="18dp"            android:layout_gravity="top"            android:layout_marginStart="0dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="20dp"            android:scaleType="fitCenter"            android:tint="?attr/colorPrimary"            app:srcCompat="@drawable/ic_dlg_tag2" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            tools:ignore="NestedWeights">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="left|center"                android:text="@string/dialog_tag1"                android:textColor="#757575"                android:textSize="12sp"                tools:ignore="RtlHardcoded" />            <TextView                android:id="@+id/tt_dlg_value1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:singleLine="true"                android:text="张彪"                android:textColor="?attr/text_color_primary"                android:textSize="18sp"                tools:ignore="HardcodedText" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="24dp"        android:layout_marginTop="10dp"        android:layout_marginRight="24dp"        android:layout_marginBottom="10dp"        android:layout_weight="1"        android:gravity="center"        android:orientation="horizontal">        <ImageView            android:layout_width="18dp"            android:layout_height="18dp"            android:layout_gravity="top"            android:layout_marginStart="0dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="20dp"            android:scaleType="fitCenter"            android:tint="?attr/colorPrimary"            app:srcCompat="@drawable/ic_dlg_tt_tag1" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            tools:ignore="NestedWeights">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="left|center"                android:text="@string/dialog_tag2"                android:textColor="#757575"                android:textSize="12sp"                tools:ignore="RtlHardcoded" />            <TextView                android:id="@+id/tt_dlg_value2"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:singleLine="true"                android:text="T3502"                android:textColor="?attr/text_color_primary"                android:textSize="18sp"                tools:ignore="HardcodedText" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginLeft="24dp"        android:layout_marginTop="10dp"        android:layout_marginRight="24dp"        android:layout_marginBottom="10dp"        android:layout_weight="1"        android:gravity="center"        android:orientation="horizontal">        <ImageView            android:layout_width="18dp"            android:layout_height="18dp"            android:layout_gravity="top"            android:layout_marginStart="0dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="20dp"            android:scaleType="fitCenter"            android:tint="?attr/colorPrimary"            app:srcCompat="@drawable/ic_dlg_tt_duration" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            tools:ignore="NestedWeights">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:text="@string/dialog_time"                android:textColor="#757575"                android:textSize="12sp" />            <TextView                android:id="@+id/tt_dlg_value3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="left|center"                android:singleLine="true"                android:text="10:30-11:00"                android:textColor="?attr/text_color_primary"                android:textSize="18sp"                tools:ignore="HardcodedText,RtlHardcoded" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginLeft="24dp"        android:layout_marginTop="10dp"        android:layout_marginRight="24dp"        android:layout_marginBottom="24dp"        android:layout_weight="1"        android:gravity="center"        android:orientation="horizontal">        <ImageView            android:layout_width="18dp"            android:layout_height="18dp"            android:layout_gravity="top"            android:layout_marginStart="0dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="20dp"            android:scaleType="fitCenter"            android:tint="?attr/colorPrimary"            app:srcCompat="@drawable/ic_dlg_timetable_date" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            tools:ignore="NestedWeights">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="center"                android:text="@string/dialog_date"                android:textColor="#757575"                android:textSize="12sp" />            <TextView                android:id="@+id/tt_dlg_date"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:gravity="left|center"                android:singleLine="true"                android:text="3月24日(第三周星期日）"                android:textColor="?attr/text_color_primary"                android:textSize="18sp"                tools:ignore="HardcodedText,RtlHardcoded" />        </LinearLayout>    </LinearLayout></LinearLayout>